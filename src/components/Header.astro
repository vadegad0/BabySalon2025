---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Title -->
      <div class="flex-shrink-0 flex items-center">
        <div class="flex items-center space-x-3">
            <img src="/svg/logo-small.svg" alt="Logo Zonal Baby Salón 2025" class="h-10">          
          <div>
            <h1 class="text-lg font-bold text-gray-900 hidden sm:block">Zonal Baby Fútbol Salón 2025</h1>
            <p class="text-xs text-gray-600 hidden sm:block">Villa Garzón</p>
          </div>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="/" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 ${currentPath === '/' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
            Inicio
          </a>
          <a href="/equipos" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 ${currentPath === '/equipos' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
            Equipos
          </a>
          <a href="/resultados" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 ${currentPath === '/resultados' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
            Resultados
          </a>
          <a href="/estadisticas" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 ${currentPath === '/estadisticas' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
            Estadísticas
          </a>
          <a href="/galeria" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200 ${currentPath === '/galeria' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
            Galería
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Abrir menú principal</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-50 rounded-lg mt-2">
        <a href="/" class={`block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 ${currentPath === '/' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
          Inicio
        </a>
        <a href="/equipos" class={`block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 ${currentPath === '/equipos' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
          Equipos
        </a>
        <a href="/resultados" class={`block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 ${currentPath === '/resultados' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
          Resultados
        </a>
        <a href="/estadisticas" class={`block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 ${currentPath === '/estadisticas' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
          Estadísticas
        </a>
        <a href="/galeria" class={`block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200 ${currentPath === '/galeria' ? 'bg-primary text-white' : 'text-gray-700 hover:bg-gray-100'}`}>
          Galería
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>